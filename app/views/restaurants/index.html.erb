<h1>All restaurants</h1>
<%= link_to 'Create a new restaurant', restaurants_new_path %>
<ul>
  <hr>
  <% @restaurants.each do |restaurant| %>
    <li><strong>Name: </strong><%= restaurant.name %></li>
    <li><strong>Address: </strong><%= restaurant.address %></li>
    <li><strong>Rating: </strong><%= restaurant.rating %></li>
    <%= link_to 'Show', restaurant_path(restaurant) %>
    <%= link_to 'Delete', restaurant_path(restaurant), data:{turbo_method: :delete, turbo_confirm: 'Sure?'} %>
    <hr>
  <% end %>
</ul>
